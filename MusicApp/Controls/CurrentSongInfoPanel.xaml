<UserControl x:Class="MusicApp.Controls.CurrentSongInfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Name="SongNameDisplay" Grid.Column="1" Foreground="White" VerticalAlignment="Bottom"
                   Margin="5" FontSize="13" TextWrapping="Wrap">N/A</TextBlock>
        <TextBlock Name="ArtistNameDisplay" Grid.Column="1" Grid.Row="1" Foreground="Gray"
                   Margin="5" FontSize="10" TextWrapping="Wrap">N/A</TextBlock>
    </Grid>
</UserControl>
